<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/roman_silver</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorHint">@color/roman_silver</item>
    </style>

    <style name="Header" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="EditText" parent="TextViewStyle">
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>