<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/roman_silver</item>
        <item name="android:textColorHint">@color/roman_silver</item>
    </style>

    <style name="Header" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="EditText" parent="TextViewStyle">
        <item name="android:padding">@dimen/_12sdp</item>
    </style>
</resources>